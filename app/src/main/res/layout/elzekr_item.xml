<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/click_effect"
    android:padding="26dp"
    app:cardCornerRadius="17dp"
    app:cardElevation="20dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_shape">


        <TextView
            android:id="@+id/tv_elzekr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:lineSpacingExtra="4sp"
            android:text="@string/elzekr"
            android:textColor="@color/color_item_font"
            android:textSize="24sp"
            app:fontFamily="@font/othmani"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_numberOfRepetition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/repetition"
            android:textColor="@color/color_item_font"
            android:textSize="24sp"
            app:background="@android:color/transparent"
            app:backgroundTint="@android:color/transparent"
            app:fontFamily="@font/othmani"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_elzekr" />

        <ImageView
            android:id="@+id/iv_okay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_done"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/tv_numberOfRepetition"
            app:layout_constraintEnd_toEndOf="@+id/tv_numberOfRepetition"
            app:layout_constraintStart_toStartOf="@+id/tv_numberOfRepetition"
            app:layout_constraintTop_toTopOf="@+id/tv_numberOfRepetition"
            tools:visibility="visible" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>